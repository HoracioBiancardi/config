    "unmark",
    "upsert",
    "usuario",
    "Usuario",
    "usuarios",
    "utilitarias",
    "utilizacao",
    "veiculos",
    "WEBPUSH",
    "windir"
  ],

  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!latex",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scss"
  ],

}